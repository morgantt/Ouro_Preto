<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
      <%= @operadora.nome %>
      <%= @operadora.marca %>
      </h1>
      <h5>
      <%= @operadora.banco %>
      </h5>
    </td>
    <td class="sidebar round">
   
    <%= link_to "Edita Operadora", edit_operadora_path(@operadora)%><br />
    <%= link_to "Adicionar Novo Tipo", new_tipoproposta_path(@operadora)%> 
    <td>
   
    </td>
  </tr>
</table>

	<table>
		<tr>
			<th>Tipo</th>
			<th>LMI</th>
			<th>LMS</th>
			<th> </th>
			<th> </th>
			<th> </th>
		</tr>
	<% @tipoproposta.each do |tp| %>

		<tr>
			<td><%= link_to tp.tipo, edit_tipoproposta_path( tp ) %></td>
			<td><%= tp.lmi %></td>
			<td><%= tp.lms %></td>
			<% if current_user.admin? %>
			<td> <%= link_to 'Deleta', tp, :method => :delete, 
								:confirm => "voce esta certo que quer deletar?" %></td>
			<% end %>
		</tr>
		
	<% end %>
	
	</table>



